        "GADApplicationIdentifier": "ca-app-pub-9485934183491164~1978001460"
      },
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-9485934183491164~1978001460"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F0F23"
