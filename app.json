        {
          "ios": {
            "deploymentTarget": "16.0",
            "useFrameworks": "static",
            "newArchEnabled": false,
            "flipper": false
          }
        }
      ],
      "expo-localization",
      "expo-updates",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#667eea",
          "sounds": [],
          "mode": "production"
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-9485934183491164~1978001460",
